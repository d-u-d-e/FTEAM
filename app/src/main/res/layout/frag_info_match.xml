<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/info_match_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ActivityInfoMatch">

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/info_match_placeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_location" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="@string/frag_info_booked_match_field"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_match_placeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="place text" />

                <ImageView
                    android:id="@+id/info_match_imageEditPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_edit_24_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/info_match_placeLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/info_match_dayLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/ic_today" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="@string/frag_info_booked_match_day"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_match_dayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="day text" />

                <ImageView
                    android:id="@+id/info_match_imageEditDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_edit_24_blue" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/info_match_dayLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/info_match_timeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/ic_access_time" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="TIME:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_match_timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="time text" />

                <ImageView
                    android:id="@+id/info_match_imageEditTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_edit_24_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/info_match_timeLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/info_match_playerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@drawable/ic_player" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="@string/frag_info_booked_match_missingPlayers"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/info_match_playersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:text="players" />

                <ImageView
                    android:id="@+id/info_match_imageEditPlayers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_edit_24_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/info_match_playerLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/info_match_descLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_baseline_description_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="DESCRIPTION:"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/info_match_imageEditDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_baseline_edit_24_blue" />

            </LinearLayout>

            <TextView
                android:id="@+id/info_match_descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="description text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_match_descLayout" />


            <Button
                android:id="@+id/info_match_editBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:enabled="false"
                android:text="EDIT MATCH"
                android:background="@drawable/editbtn"
                android:visibility="gone"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_match_descriptionText" />

            <com.es.findsoccerplayers.models.CustomMapView
                android:id="@+id/info_match_mapPreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_match_editBtn">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/info_match_mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.es.findsoccerplayers.models.CustomMapView>

            <Button
                android:id="@+id/info_match_actionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:text="DELETE/DROP/JOIN"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_match_mapPreview" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>


